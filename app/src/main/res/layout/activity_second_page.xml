<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@drawable/perchment4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="65dp"
        android:text="Benvenuto in Pagina\"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:fontFamily="@font/cinzel_regular"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Button" />

    <TextView
        android:id="@+id/editTextTabulaCerata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Province di ..."
        android:background="@drawable/tabula_cerata_background"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="12dp"
        android:gravity="center"/>


</LinearLayout>