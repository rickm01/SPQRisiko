<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/sand">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center">

        <!-- Titolo della pagina -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_provinces_page"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/cinzel_bold"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            />



            <!-- Card per il giocatore 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:backgroundTint="#FFC107"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tabula_cerata_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/player1Name"
                        android:text="Giocatore 1"
                        style="@style/TitleProvinces"/>
                    <TextView
                        android:id="@+id/player1Provinces"
                        android:text="Province di Giocatore 1"
                        style="@style/ContentProvinces"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:backgroundTint="#FFC107"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabula_cerata_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player2Name"
                    android:text="Giocatore 2"
                    style="@style/TitleProvinces"
                    />
                <TextView
                    android:id="@+id/player2Provinces"
                    android:text="Province di Giocatore 2"
                    style="@style/ContentProvinces"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Card per il giocatore 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:backgroundTint="#FFC107"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabula_cerata_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player3Name"
                    android:text="Giocatore 3"
                    style="@style/TitleProvinces"/>
                <TextView
                    android:id="@+id/player3Provinces"
                    android:text="Province di Giocatore 3"
                    style="@style/ContentProvinces"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card per il giocatore 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:backgroundTint="#FFC107"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabula_cerata_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player4Name"
                    android:text="Giocatore 4"
                    style="@style/TitleProvinces"/>
                <TextView
                    android:id="@+id/player4Provinces"
                    android:text="Province di Giocatore 4"
                    style="@style/ContentProvinces"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card per il giocatore 5 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:backgroundTint="#FFC107"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabula_cerata_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player5Name"
                    android:text="Giocatore 5"
                    style="@style/TitleProvinces"/>
                <TextView
                    android:id="@+id/player5Provinces"
                    android:text="Province di Giocatore 5"
                    style="@style/ContentProvinces"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
