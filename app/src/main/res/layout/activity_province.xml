<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center">

        <!-- Titolo della pagina -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_provinces_page"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/cinzel_bold"
            android:layout_marginBottom="16dp"
            android:gravity="center"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/perchment4" />

        <!-- Card per il giocatore 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:backgroundTint="#00FFC107"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <!-- Nome del giocatore -->
                <TextView
                    android:id="@+id/player1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/player_1"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cinzel_bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Province assegnate -->
                <TextView
                    android:id="@+id/player1Provinces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/provinces_player1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cinzel_regular"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        </FrameLayout>

        <!-- Ripetere per ogni giocatore -->
        <!-- Card per il giocatore 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:backgroundTint="#FFC107"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giocatore 2"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cinzel_bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/player2Provinces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Province di Giocatore 2"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cinzel_regular"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card per il giocatore 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:backgroundTint="#FFC107"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player3Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giocatore 3"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cinzel_bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/player3Provinces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Province di Giocatore 3"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cinzel_regular"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card per il giocatore 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:backgroundTint="#FFC107"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player4Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giocatore 4"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cinzel_bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/player4Provinces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Province di Giocatore 4"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cinzel_regular"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card per il giocatore 5 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:backgroundTint="#FFC107"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/player5Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giocatore 5"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cinzel_bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/player5Provinces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Province di Giocatore 5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cinzel_regular"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
