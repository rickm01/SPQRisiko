<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/battlefield"
    android:padding="16sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8sp">

        <!-- Titolo della pagina -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:fontFamily="@font/cinzel_bold"
            android:gravity="center"
            android:text="@string/title_provinces_page"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />


        <!-- Card per il giocatore 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:backgroundTint="#FFC107"
            android:elevation="6sp"
            android:padding="16sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabula_cerata_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/player1Name"
                        style="@style/TitleProvinces"
                        android:text="Giocatore 1" />

                    <TextView
                        android:id="@+id/color1"
                        style="@style/ColorProvinces" />
                </LinearLayout>

                <TextView
                    android:id="@+id/player1Provinces"
                    style="@style/ContentProvinces"
                    android:text="Province di Giocatore 1" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:backgroundTint="#FFC107"
            android:elevation="6sp"
            android:padding="16sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabula_cerata_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/player2Name"
                        style="@style/TitleProvinces"
                        android:text="Giocatore 2" />

                    <TextView
                        android:id="@+id/color2"
                        style="@style/ColorProvinces" />
                </LinearLayout>

                <TextView
                    android:id="@+id/player2Provinces"
                    style="@style/ContentProvinces"
                    android:text="Province di Giocatore 2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Card per il giocatore 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:backgroundTint="#FFC107"
            android:elevation="6sp"
            android:padding="16sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabula_cerata_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/player3Name"
                        style="@style/TitleProvinces"
                        android:text="Giocatore 3" />

                    <TextView
                        android:id="@+id/color3"
                        style="@style/ColorProvinces" />
                </LinearLayout>

                <TextView
                    android:id="@+id/player3Provinces"
                    style="@style/ContentProvinces"
                    android:text="Province di Giocatore 3" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card per il giocatore 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:backgroundTint="#FFC107"
            android:elevation="6sp"
            android:padding="16sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabula_cerata_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/player4Name"
                        style="@style/TitleProvinces"
                        android:text="Giocatore 4" />

                    <TextView
                        android:id="@+id/color4"
                        style="@style/ColorProvinces" />
                </LinearLayout>
                <TextView
                    android:id="@+id/player4Provinces"
                    style="@style/ContentProvinces"
                    android:text="Province di Giocatore 4" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card per il giocatore 5 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:backgroundTint="#FFC107"
            android:elevation="6sp"
            android:padding="16sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tabula_cerata_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/player5Name"
                        style="@style/TitleProvinces"
                        android:text="Giocatore 5" />

                    <TextView
                        android:id="@+id/color5"
                        style="@style/ColorProvinces" />
                </LinearLayout>

                <TextView
                    android:id="@+id/player5Provinces"
                    style="@style/ContentProvinces"
                    android:text="Province di Giocatore 5" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
