<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/backgroudfirstpage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_alignParentTop="true"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="20sp"

        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:background="@color/white"
        android:fontFamily="@font/cinzel_extrabold"
        android:padding="20dp"
        android:text="@string/insert_names_title"
        android:textColor="#000000"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="333dp"
        android:layout_height="262dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="31dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="93dp"
        android:background="@drawable/perchment3"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        android:paddingTop="45dp"
        android:paddingRight="60dp">

        <EditText
            android:id="@+id/editTextName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cinzel_bold"
            android:hint="Primo nome..."
            android:textColor="#000000"
            android:textColorHint="#75000000" />

        <EditText
            android:id="@+id/editTextName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cinzel_bold"
            android:hint="Secondo nome..."
            android:textColor="#000000"
            android:textColorHint="#75000000" />

        <EditText
            android:id="@+id/editTextName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cinzel_bold"
            android:hint="Terzo nome..."
            android:textColor="#000000"
            android:textColorHint="#75000000" />

        <EditText
            android:id="@+id/editTextName4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cinzel_bold"
            android:hint="Quarto nome..."
            android:textColor="#000000"
            android:textColorHint="#75000000" />

        <EditText
            android:id="@+id/editTextName5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cinzel_bold"
            android:hint="Quinto nome..."
            android:textColor="#000000"
            android:textColorHint="#75000000" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="50dp"
        android:background="#C2B280"
        android:fontFamily="@font/cinzel_extrabold"
        android:padding="12dp"
        android:text="Mostra Province"
        android:textColor="#000000"
        android:textSize="20dp" />

</RelativeLayout>
