<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/harbour"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:background="#8B4513"
        android:fontFamily="@font/cinzel_extrabold"
        android:padding="20dp"
        android:text="@string/insert_names_title"
        android:textColor="#000000"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:background="@drawable/perchment4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="65dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextName1"
                    style="@style/EditTextFirstPage"
                    android:hint="@string/first_name" />

                <Button
                    android:id="@+id/colorButton1"
                    style="@style/ColorButtonFirstPage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextName2"
                    style="@style/EditTextFirstPage"
                    android:hint="@string/second_name" />

                <Button
                    android:id="@+id/colorButton2"
                    style="@style/ColorButtonFirstPage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextName3"
                    style="@style/EditTextFirstPage"
                    android:hint="@string/third_name" />

                <Button
                    android:id="@+id/colorButton3"
                    style="@style/ColorButtonFirstPage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextName4"
                    style="@style/EditTextFirstPage"
                    android:hint="@string/fourth_name" />

                <Button
                    android:id="@+id/colorButton4"
                    style="@style/ColorButtonFirstPage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextName5"
                    style="@style/EditTextFirstPage"
                    android:hint="@string/fifth_name" />

                <Button
                    android:id="@+id/colorButton5"
                    style="@style/ColorButtonFirstPage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/linearLayout"
                android:layout_gravity="center"
                android:background="#C2B280"
                android:fontFamily="@font/cinzel_extrabold"
                android:padding="12dp"
                android:text="@string/show_provinces"
                android:textColor="#000000"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buttonReset"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:background="#C2B280"
                android:fontFamily="@font/cinzel_extrabold"
                android:text="R"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

